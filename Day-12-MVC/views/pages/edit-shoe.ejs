<%- include('../partials/header.ejs') %>
    <!-- ============================================================== -->
    <!-- End Left Sidebar - style you can find in sidebar.scss  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Form Basic</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Library</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <form class="form-horizontal" method="post" action="/admin/edit/<%= editShoe.id %>" enctype="multipart/form-data">
                            <div class="card-body">
                                <h4 class="card-title">Edit Shoe</h4>
                                <div class="form-group row">
                                    <label for="title" class="col-sm-3 text-right control-label col-form-label">Shoe
                                        Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="<%= editShoe.name %>" name="name" id="title"
                                            placeholder="Shoe Name/URL">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="image" class="col-sm-3 text-right control-label col-form-label">Shoe
                                        Image</label>
                                    <div class="col-sm-9">
                                        <input type="file" class="form-control" name="image" id="image"
                                            placeholder="Select Image">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="image" class="col-sm-3 text-right control-label col-form-label">Current
                                        Image</label>
                                    <div class="col-sm-9">
                                        <img src="/<%= editShoe.image %>" alt="" width="100px">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="rating"
                                        class="col-sm-3 text-right control-label col-form-label">Rating</label>

                                    <div class="col-md-9">
                                        <select class="select2 form-control custom-select"
                                            style="width: 100%; height:36px; " name="rating" value="<%= editShoe.rating %>">
                                            <option>Rate</option>
                                            <option value="⭐">⭐</option>
                                            <option value="⭐⭐">⭐⭐</option>
                                            <option value="⭐⭐⭐">⭐⭐⭐</option>
                                            <option value="⭐⭐⭐⭐">⭐⭐⭐⭐</option>
                                            <option value="⭐⭐⭐⭐⭐">⭐⭐⭐⭐⭐</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lname" class="col-sm-3 text-right control-label col-form-label">Shoe
                                        Price</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" name="price" id="lname" placeholder="Enter Price" value="<%= editShoe.price %>">
                                    </div>
                                </div>
                            </div>
                            <div class="border-top">
                                <div class="card-body">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Right sidebar -->
            <!-- ============================================================== -->
            <!-- .right-sidebar -->
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <%- include('../partials/footer.ejs') %>